{
  "name": "obsidian-smart-spacing",
  "version": "1.0.5",
  "description": "Smart spacing for Obsidian",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "postversion": "git push && git push --tags && npm run github-release",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "check": "tsc --noEmit",
    "test": "node verify_logic.js",
    "lint": "npm run eslint && npm run check",
    "format": "npm run eslint:fix",
    "prerelease": "npm run lint && npm run build",
    "release:patch": "npm version patch",
    "release:minor": "npm version minor",
    "release:major": "npm version major",
    "release": "npm run release:patch",
    "github-release": "node scripts/create-release.mjs"
  },
  "keywords": [],
  "author": "jy324",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.19.3",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "builtin-modules": "^4.0.0",
    "esbuild": "^0.24.2",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jiti": "^2.6.1",
    "obsidian": "^1.7.7",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  }
}
